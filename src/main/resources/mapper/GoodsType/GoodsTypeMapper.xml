<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csdj.chainsupermarket.dao.commodity.GoodsTypeMapper">
    <!--分页查询全部的记录-->
    <select id="getGoodsTypeList" resultType="GoodsType" parameterType="int">
        SELECT id,type_name typename,type_count typecount,creatadate,parentid parentId,stop
        FROM goods_type where parentid = #{parentid} and del = 0 ORDER BY creatadate DESC
        <if test="currentPage != null">
            <if test="pageSize != null">
                LIMIT #{currentPage},#{pageSize}
            </if>
        </if>
    </select>
    <!--查询总数-->
    <select id="getCount" resultType="int">
       select count(1) from goods_type where parentid = 0
    </select>
    <!--删除状态修改-->
    <update id="getGoodsTypeDel" parameterType="int">
        UPDATE goods_type SET del = 1 WHERE id = #{id}
    </update>
    <!-- 父类停启用 -->
    <!--父类 1为停用状态，变停用--><!-- 0为停用状态，变启用 -->
    <update id="getGoodsTypeOne" parameterType="int">
        UPDATE goods_type SET STOP = #{stop} WHERE id = #{id}
    </update>
    <!-- 子类停启用 -->
    <!--子类 1为停用状态，变停用--><!-- 0为停用状态，变启用 -->
    <update id="getParentId" parameterType="int">
        UPDATE goods_type SET STOP = #{stop} WHERE parentid = #{parentid}
    </update>
    <!-- 父类类型提供 -->
    <select id="getTypeNameList" resultType="GoodsType">
        SELECT id,type_name typename FROM goods_type WHERE parentid = 0
    </select>

    <!-- 查询所有父类-->
    <select id="findByAll" resultType="GoodsType">
        SELECT id,type_name typename FROM goods_type WHERE parentid = 0
    </select>
    <!--查询单个父类-->
    <select id="findById" resultType="GoodsType" parameterType="int">
        SELECT id,type_name typename FROM goods_type WHERE parentid = 0 and id=#{id}
    </select>

    <!-- 类型修改 -->
    <update id="getGoodsTypeUpdate" parameterType="GoodsType">
        UPDATE goods_type
        SET type_name=#{typename},type_count=#{typecount},modifyby=#{modifyby},modifybydate=#{modifybydate}
        WHERE id = #{id}
    </update>
    <!-- 父类增加 -->
    <insert id="getGoodsTypeAddfu" parameterType="GoodsType">
        INSERT INTO goods_type (
  `type_name`,
  `type_count`,
  `creatadate`,
  `createname`,
  `modifyby`,
  `modifybydate`,
  `parentid`
)
VALUES
  (
    #{typename},
    #{typecount},
    #{creatadate},
    #{createname},
    #{modifyby},
    #{modifybydate},
    #{parentId}
  )
    </insert>
    <!-- 子类增加 -->
    <insert id="getGoodsTypeAddzi" parameterType="GoodsType">
        INSERT INTO goods_type (
  `type_name`,
  `type_count`,
  `creatadate`,
  `createname`,
  `modifyby`,
  `modifybydate`,
  `parentid`
)
VALUES
  (
    #{typename},
    #{typecount},
    #{creatadate},
    #{createname},
    #{modifyby},
    #{modifybydate},
    #{parentId}
  )
    </insert>

</mapper>