<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csdj.chainsupermarket.dao.advertising.AdvertisingTypeVoMapper">
    <!--查询广告类型信息 -->
    <select id="findAdvertisingTypeVoList" parameterType="AdvertisingTypeVO" resultType="AdvertisingTypeVO">
       select advertising_id as advertisingId,advertising_name as advertisingName,usable as usable,count(advertising_name) as num,orderby_by as orderByBy,enteringtime as enteringTime from advertising_type  group by advertising_name
    </select>
    <!--添加广告类型信息 -->
    <insert id="addAdvertisingType" parameterType="AdvertisingTypeVO">
       insert into advertising_type(advertising_name,usable,orderby_by,createtime,enteringtime,updatetime,advert_content) values(#{advertisingName},#{usable},#{orderByBy},#{createTime},#{enteringTime},#{updateTime},#{advertContent})
    </insert>
    <!--删除广告类型信息-->
    <delete id="deleteAdvertisingType" parameterType="Integer">
        delete from advertising_type where advertising_id=#{advertisingId}
    </delete>
</mapper>